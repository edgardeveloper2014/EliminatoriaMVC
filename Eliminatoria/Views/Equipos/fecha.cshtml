@model  Eliminatoria.Models.fecha

@{
    ViewBag.Title = "fecha";
}

<h2>fecha</h2>
<div class="jumbotron">
   


    @using (Html.BeginForm("registroFecha", "equipos", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <fieldset>

            <legend> Registrar Fechas de los partidos</legend>
            <div class="row">
                <div class="col-md-8">
                    @Html.LabelFor(e => e.fecha1)
                </div>
                <div class="col-md-8">
                    @Html.TextBoxFor(e => e.fecha1, new { @class = "form-control", @required = "required", @type="date" })
                    

                </div>
                <div class="col-md-8">
                    @Html.DisplayText("Equipo 1")


                </div>
                <div class="col-md-8">
                 
                    @Html.TextBoxFor(e => e.fkIdE1, new { @class = "form-control", @required = "required" })
                   

                </div>
                <div class="col-md-8">
                  
                    @Html.DisplayText("Equipo 2")
                </div>
                <div class="col-md-8">

                    @Html.TextBoxFor(e => e.fkIdE2, new { @class = "form-control", @required = "required" })
                    <input type="submit" value="Registrar Fecha" class="btn btn-success" />

                </div>
            </div>
        </fieldset>
    }
</div>

