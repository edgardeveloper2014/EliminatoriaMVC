@model  Eliminatoria.Models.detalle
@{
    ViewBag.Title = "detalle";
}

<h2>detalle</h2>
<div class="jumbotron">

    @using (Html.BeginForm("registroDetalle", "equipos", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <fieldset>

            <legend> Registrar el detalle del partido</legend>
            <div class="row">
                <div class="col-md-8">
                    @Html.LabelFor(d => d.fkIdFecha)
                </div>
                <div class="col-md-8">
                    @Html.TextBoxFor(e => e.fkIdFecha, new { @class = "form-control", @required = "required" })


                </div>
                <div class="col-md-8">
                    <label>Gol Equipo 1</label>
                   


                </div>
                <div class="col-md-8">

                    @Html.TextBoxFor(e => e.goles1, new { @class = "form-control", @required = "required" })


                </div>
                <div class="col-md-8">

                   
                  <label>Gol Equipo 2</label>
                </div>
                <div class="col-md-8">

                    @Html.TextBoxFor(e => e.goles2, new { @class = "form-control", @required = "required" })
                    <input type="submit" value="Registrar Detalle" class="btn btn-warning" />

                </div>
            </div>
        </fieldset>
    }
</div>
