
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
@model  Eliminatoria.Models.equipo


@using (Html.BeginForm("registro","equipos",FormMethod.Post))
            {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset>

        <legend> Registrar Equipos</legend>
        <div class="row">
            <div class="col-md-8">
                @Html.LabelFor(e => e.nombre)
            </div>
            <div class="col-md-8">
                @Html.TextBoxFor(e => e.nombre ,new {@class="form-control", @required="required"})
                <input type="submit" value="Registro" class="btn btn-primary" />

            </div>
        </div>
    </fieldset>
}
</div>

